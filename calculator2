import re

print("Our Magical Calculator")

previous = 0
run = True

def perform_math():
    global run
    global previous
    equation = ""
    if previous == 0:
        equation = input("Enter equation: ")
    else:
        equation = input("Enter equation: ")


    if equation == 'quit':
        print('Good bye')
        run = False
    else:
        equation = re.sub('[a-zA-Z,.()!@Â£$%^,.]', '', equation)

        if previous ==0:
            previous = eval(equation)
        else:
            previous = eval(str(previous) + equation)
    print(previous)

while run:
    perform_math()
